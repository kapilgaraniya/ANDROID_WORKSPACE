<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Doctor Name -->
        <TextView
            android:id="@+id/tvDoctorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor: Dr. Smith"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <!-- Patient Name -->
        <TextView
            android:id="@+id/tvPatientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient: John Doe"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp"/>

        <!-- Patient Contact -->
        <TextView
            android:id="@+id/tvPatientContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact: +91 9876543210"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>

        <!-- Appointment Date -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 13/12/2025"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"/>

        <!-- Appointment Time -->
        <TextView
            android:id="@+id/tvTimeSlot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: 11:00 AM"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"/>


        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Appointment"
            android:textAllCaps="false"
            android:backgroundTint="@color/primary"
            android:textColor="@android:color/white"/>

        <!-- Delete Button -->
        <Button
            android:id="@+id/btnDeleteAppointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Appointment"
            android:textAllCaps="false"
            android:backgroundTint="@android:color/holo_red_light"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
